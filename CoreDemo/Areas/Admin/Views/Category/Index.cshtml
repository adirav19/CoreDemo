


@using X.PagedList @*paged listi buraya entegre ediyoruz*@
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@*liste gibi padeg listi kullanacağız*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori adı</th>
        <th>Pasifleştir</th>
        <th>Aktifleştir</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID"
                   id="DeleteBtn"
                   onclick="return confirm('Silmek istediğinize emin misniz ? ');"
                   class="btn btn-github">Pasifleştir</a></td>
            <td><a href="#" class="btn btn-github">Aktifleştir</a></td>
            <td><a href="#" class="btn btn-github">Düzenle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))


<a href="/Admin/Category/AddCategory/" class="btn btn-github">Yeni kategori</a>
<br />

@*burası her defasında indexe gider ama page parametresi ile gider
    örnek 2. sayafadan başlarsak 2. sayfadaki değerleri döndürecek.*@