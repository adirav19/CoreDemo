
@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>

<table>
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.MessageID</td>
    <td>@item.Subject</td>
    <td>@item.SenderUser.WriterName</td>
    <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>

    <td>@item.MessageStatus</td>
    <td><a href="/Message2/MessageDetails/@item.MessageID" class="btn btn-danger">Mesajı Oku</a></td>
    
</tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-danger">yeni mesaj oluştur</a>
