
@model IEnumerable<EntityLayer.Concrete.Comment>




<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {

            <div class="media">

                <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">

                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentTitle,@item.CommentContent
                    </p>



                </div>

            </div>
        }

    }
    else
    {
        <h5 class="ml-5">Hiç yorum yapılmamış, İlk yorumu sen yap !</h5>
    }

</div>
