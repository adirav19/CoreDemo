



@using EntityLayer.Concrete
@model List<Writer>


@foreach (var item in Model)
{

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Güncellemeler</h4>
                <div class="d-flex">
                    <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
                        <i class="mdi mdi-account-outline icon-sm mr-2"></i>
                        <span>@item.WriterName</span>
                    </div>
                    <div class="d-flex align-items-center text-muted font-weight-light">
                        <i class="mdi mdi-postage-stamp icon-sm mr-2"></i>
                        <span>@item.WriterMail</span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6 pr-1">
                        <img src="/writer/assets/images/dashboard/img_1.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                        <img src="/writer/assets/images/dashboard/img_4.jpg" class="mw-100 w-100 rounded" alt="image">
                    </div>
                    <div class="col-6 pl-1">
                        <img src="/writer/assets/images/dashboard/img_2.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                        <img src="/writer/assets/images/dashboard/img_3.jpg" class="mw-100 w-100 rounded" alt="image">
                    </div>
                </div>
                <div class="d-flex mt-5 align-items-top">

                    <img src="/WriterImageFiles/@item.WriterImage" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">Yazar Hakkında</h5>
                        <p class="mb-0 font-weight-light">@item.WriterAbout</p>
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

}